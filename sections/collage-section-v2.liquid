{{ 'collage-section-v2.css' | asset_url | stylesheet_tag }}
<section class="image-heading-content-section" id="image-heading-content-section">
    <div class="image-heading-content">
      <div class="image-and-heading">
        <div class="inner-div">
          <img src="{{ section.settings.imageone | img_url: 'master' }}" class="img-one">
          <img src="{{ section.settings.imagetwo | img_url: 'master' }}" class="img-two">
          <h2>{{ section.settings.heading }}</h2>
        </div>
      </div>
      <div class="row content_row">
        <div class="col-3 col-md-3 empty_block">&nbsp;</div>
        <div class="col-6 col-md-6 content_block">
          <div class="center-content">
            <p>{{ section.settings.description | newline_to_br }}</p>
          </div>
        </div>
        <div class="col-3 col-md-3 empty_block">&nbsp;</div>
      </div>
    </div>
  </section>
  
  {% schema %}
    {
      "name": "Collage Section v2",
      "settings": [
        {
          "type": "image_picker",
          "id": "imageone",
          "label": "Image One"
        }, {
          "type": "image_picker",
          "id": "imagetwo",
          "label": "Image One"
        }, {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }, {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ],
      "presets": [
        {
          "name": "Collage Section v2"
        }
      ]
  
    }
  {% endschema %}