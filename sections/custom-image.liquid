<style>

    .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_topm }}px;
       padding-bottom: {{ section.settings.padding_bottomm }}px;
       padding-left: {{ section.settings.padding_leftm }}px;
       padding-right: {{ section.settings.padding_rightm }}px;
     }
     .custom-image-container{
          max-width:100%;margin:0 auto;
     }
     .image-block-{{section.id}}{
        display:none;
        margin-top:{{section.settings.image-margin-top}}px;
        margin-bottom:{{section.settings.image-margin-bottom}}px;
        justify-content:{{section.settings.image_align}};
      }
        .image-block-{{section.id}} img{
             width: 100%;
        }
     .image-block-{{section.id}}.mb{
          display:flex
     }
     @media screen and (min-width: 750px) {
     .image-block-{{section.id}}.mb{
        display:none;
        }
     .image-block-{{section.id}}{
        display:flex;
        margin-top:{{section.settings.image-margin-top}}px;
        margin-bottom:{{section.settings.image-margin-bottom}}px;
        justify-content:{{section.settings.image_align}};
     }
    .image-block-{{section.id}} img{
         width: {{section.settings.image-width}}%;
    }
     .custom-image-container{
         max-width:1220px;margin:0 auto;
      }
       .section-{{ section.id }}-padding {
         padding-top: {{ section.settings.padding_top }}px;
         padding-bottom: {{ section.settings.padding_bottom }}px;
         padding-left: {{ section.settings.padding_left }}px;
         padding-right: {{ section.settings.padding_right }}px;
       }
     }
  </style>
  <section class="custom-image section-{{ section.id }}-padding" >
      <div class="custom-image-container">
          <div class="pageheading">
              {%if section.settings.image != blank %}
                  <div class="image-block-{{section.id}}">
                      <img src="{{ section.settings.image | img_url:'master' }}"  >
                   </div>
              {% endif %}
              {%if section.settings.imagemb != blank %}
                  <div class="image-block-{{section.id}} mb">
                      <img src="{{ section.settings.imagemb | img_url:'master' }}"  >
                   </div>
              {% endif %}
          </div>
      </div>
  </section>
  
  {% schema %}
  {
    "name": "Custom Image",
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        },
        {
          "type": "image_picker",
          "id": "imagemb",
          "label": "Select Mobile Image"
        },
        {
            "type": "range",
            "id": "image-width",
            "min": 1,
            "max": 100,
            "step": 1,
            "default": 100,
            "unit": "%",
            "label": "Width"
         },
        {
            "type": "range",
            "id": "image-margin-top",
            "min": 10,
            "max": 200,
            "step": 10,
            "default": 200,
            "unit": "px",
            "label": "Margin Top"
         },
        {
            "type": "range",
            "id": "image-margin-bottom",
            "min": 10,
            "max": 200,
            "step": 10,
            "default": 200,
            "unit": "px",
            "label": "Margin Bottom"
         },
         {
           "type": "select",
           "id":   "image_align",
            "label": {
            "en": "Image Alignment"
            },
        "options": [
            {
                "value": "center",
                "label": {
                    "en": "Center"
                }
            },
            {
                "value": "left",
                "label": {
                    "en": "Left (Default)"
                }
            },
            {
                "value": "right",
                "label": {
                    "en": "right"
                }
            }
        ],
        "default": "center"
        },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_left",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Left",
        "default": 30
      },
      {
        "type": "range",
        "id": "padding_right",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Right",
        "default": 30
      },
      {
        "type": "range",
        "id": "padding_topm",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Mobile Padding Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottomm",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Mobile Padding Bottom",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_leftm",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Mobile Padding Left",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_rightm",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Mobile Padding Right",
        "default": 20
      }
  
      ],
      "presets": [
        {
          "name": "Custom Image"
        }
        ]
  }
  {% endschema %}
  
  