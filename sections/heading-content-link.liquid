{{ 'heading-content-link.css' | asset_url | stylesheet_tag }}
<section class="heading-content-link-section" id="heading-content-link-section">
    <div class="heading-content-link">
      <div class="row content_row">
        <div class="col-3 col-md-3 content_block">
          <div class="left-content">
            {% if section.settings.heading != blank %}
              <h2>{{ section.settings.heading }}</h2>
            {% endif %}
          </div>
        </div>
        <div class="col-6 col-md-6 content_block">
          <div class="center-content">
            {% if section.settings.description != blank %}
              <p>{{ section.settings.description }}
                {% if section.settings.linkurl != blank and section.settings.linktext != blank %}
                  <a href="{{ section.settings.linkurl }}">{{ section.settings.linktext }}</a>
                {% endif %}
              </p>
            {% endif %}
          </div>
        </div>
        <div class="col-3 col-md-3 empty_block">&nbsp;</div>
      </div>
    </div>
  </section>
  
  {% schema %}
    {
      "name": "Heading Content & Link",
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }, {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }, {
          "type": "url",
          "id": "linkurl",
          "label": "Link URL"
        }, {
          "type": "text",
          "id": "linktext",
          "label": "Link Text"
        }
      ],
      "presets": [
        {
          "name": "Heading Content & Link"
        }
      ]
  
    }
  {% endschema %}