{{ 'heading-logo-text.css' | asset_url | stylesheet_tag }}
<section class="heading-logo-text-section {% if section.settings.heading == 'Press' %} heading-logo-text-border-top {% endif %}" id="heading-logo-text-section">
    <div class="heading-logo-text">
      <div class="row content_row">
        <div class="col-3 col-md-3 content_block">
          <div class="left-content">
            {% if section.settings.heading != blank %}
              <h2>{{ section.settings.heading }}</h2>
            {% endif %}
          </div>
        </div>
        <div class="col-2 col-md-2 content_block">
          <div class="center-content">
            {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | image_url }}">
            {% endif %}
          </div>
        </div>
        <div class="col-7 col-md-7 content_block">
          <div class="center-content">
            {% if section.settings.logotext != blank %}
              <p>{{ section.settings.logotext }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {% schema %}
    {
      "name": "Heading Logo & Text",
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }, {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        }, {
          "type": "text",
          "id": "logotext",
          "label": "Logo Text"
        }
      ],
      "presets": [
        {
          "name": "Heading Logo & Text"
        }
      ]
  
    }
  {% endschema %}