<link rel="stylesheet" href="{{ 'minded-post.css' | asset_url }}" >
<style>

  .section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_topm }}px;
     padding-bottom: {{ section.settings.padding_bottomm }}px;
     padding-left: {{ section.settings.padding_leftm }}px;
     padding-right: {{ section.settings.padding_rightm }}px;
   }

   @media screen and (min-width: 750px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       padding-left: {{ section.settings.padding_left }}px;
       padding-right: {{ section.settings.padding_right }}px;
     }
   }
</style>
<section class="minded-post section-{{ section.id }}-padding" style="background-color:{{section.settings.bgcolor}};">
    <div class="highminded-container">
         {%if section.settings.title != blank %}
            <div class="title">
                {{section.settings.title}}<img src="{{ section.settings.postimage | img_url:'master' }}">
            </div>
        {% endif %}
        {%if section.settings.barline != blank %}
            <div class="bar-text">
                {{section.settings.barline}} <a href="{{section.settings.readmoreurl}}">{{section.settings.readmore}}</a>
            </div>
        {% endif %}
    </div>
</section>

{% schema %}
{
  "name": "High Minded Post",
  "settings": [
    {
      "type": "header",
      "content": "Header Area"
    },
    {
       "type":"color",
       "id":"bgcolor",
       "label": "Background Color"
    },
    {
       "type":"text",
       "id":"title",
       "label": "Title Line",
       "default": "High Minded"
    },
    {
       "type":"image_picker",
       "id":"postimage",
       "label": "Select Post Image"
    },
    {
       "type":"text",
       "id":"barline",
       "label": "Post Copy Content",
       "default": "Post Copy Content"
    },
    {
       "type":"text",
       "id":"readmore",
       "label": "Read More text",
       "default": "Read More"
    },
    {
       "type":"url",
       "id":"readmoreurl",
       "label": "Read More Url"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_topm",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottomm",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_leftm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Left",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_rightm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Right",
      "default": 20
    }

    ],
    "presets": [
      {
        "name": "High Minded Post"
      }
      ]
}
{% endschema %}

