<link rel="stylesheet" href="{{ 'how-to-banner.css' | asset_url }}" >
<style>

  .section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_topm }}px;
     padding-bottom: {{ section.settings.padding_bottomm }}px;
     padding-left: {{ section.settings.padding_leftm }}px;
     padding-right: {{ section.settings.padding_rightm }}px;
   }

   @media screen and (min-width: 750px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       padding-left: {{ section.settings.padding_left }}px;
       padding-right: {{ section.settings.padding_right }}px;
     }
   }
</style>
<section class="how-to-banner section-{{ section.id }}-padding" >
    <div class="how-to-banner-container">
        <div class="howpageheading">
            {%if section.settings.fline != blank %}
                <div class="howf-line">
                    {{section.settings.fline}}
                </div>
            {% else %}
                <div class="howf-line">
                    {{article.title | truncatewords: 2, '' }}
                </div>
            {% endif %}
            {%if section.settings.sline != blank %}
                <div class="hows-line">
                    {{section.settings.sline}}
                </div>
            {% endif %}
            {%if section.settings.tline != blank %}
                <div class="howt-line">
                    {{section.settings.tline}}
                </div>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "How To Banner",
  "settings": [
    {
       "type":"color",
       "id":"bg-color",
       "label": "Background Color"
    },
    {
        "type":"image_picker",
        "id":"bg-image",
        "label": "Background Image"
     },
    {
      "type": "header",
      "content": "Header Area"
    },
    {
       "type":"text",
       "id":"fline",
       "label": "First line",
       "default": "How to"
    },
    {
       "type":"text",
       "id":"sline",
       "label": "Second line",
       "default": "Roll A"
    },
    {
       "type":"text",
       "id":"tline",
       "label": "Third line",
       "default": "Sensible Joint"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Left",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Right",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_topm",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottomm",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_leftm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Left",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_rightm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Padding Right",
      "default": 20
    }

    ],
    "presets": [
      {
        "name": "How To Banner"
      }
      ]
}
{% endschema %}

