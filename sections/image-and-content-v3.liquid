{{ 'image-and-content-v3.css' | asset_url | stylesheet_tag }}
<section class="heading-banner-content-section" id="heading-banner-content-section">
    <div class="heading-banner-content">
  
      <div class="row heading_row">
        <div class="col-8 col-md-8 heading_block">
          <div class="left-content">
            <h2>{{ section.settings.heading }}</h2>
          </div>
        </div>
        <div class="col-4 col-md-4 empty_block">&nbsp;</div>
      </div>
      <div class="row content_row">
        <div class="col-12 col-md-12">
          <div class="left-content">
            <img src="{{ section.settings.banner | img_url: 'master' }}">
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {% schema %}
    {
      "name": "Image and content v3",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        }, {
          "type": "image_picker",
          "id": "banner",
          "label": "Banner"
        }
      ],
      "presets": [
        {
          "name": "Image and content v3"
        }
      ]
  
    }
  {% endschema %}