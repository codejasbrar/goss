{{ 'newsletter-head.css' | asset_url | stylesheet_tag }}
<section class="newsletter-section" id="newsletter-section">
    <div class="newsletter-div">
  
      <div class="newsletter-form-div">
        {% if section.settings.page_title != blank %}
          <h1>{{ section.settings.page_title }}</h1>
        {% endif %}
        <div class="form">
          {% form 'customer' %}
            {{ form.errors | default_errors }}
            <div class="email">
              <input
                type="email"
                name="subscribe[email]"
                id="email"
                placeholder="Email address" />
            </div>
            <div class="submit">
              <button type="submit" name="subscribe">Subscribe</button>
            </div>
          {% endform %}
          {% if section.settings.unsubscribe_line != blank %}
            <p>{{ section.settings.unsubscribe_line }}</p>
          {% endif %}
        </div>
      </div>
  
    </div>
  </section>
  
  {% schema %}
    {
      "name": "Newsletter Head",
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "page_title",
          "label": "Page Title"
        }, {
          "type": "text",
          "id": "unsubscribe_line",
          "label": "Unsubscribe Line"
        }
      ],
      "presets": [
        {
          "name": "Newsletter Head"
        }
      ]
    }
  {% endschema %}